#!/bin/bash

# Get the directory of the script
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Navigate to the root directory (one level up from scripts)
ROOT_DIR="$(dirname "$SCRIPT_DIR")"

# Create secrets directory if it doesn't exist
mkdir -p "$ROOT_DIR/secrets"

# Email configuration
echo "your_stmp_host" > "$ROOT_DIR/secrets/email_host"
echo "your_stmp_port" > "$ROOT_DIR/secrets/email_port"
echo "your_email_user" > "$ROOT_DIR/secrets/email_user"
echo "your_email_password" > "$ROOT_DIR/secrets/email_password"
echo "your_email_from_adress" > "$ROOT_DIR/secrets/email_from"

echo "Local secrets set successfully in $ROOT_DIR/secrets"